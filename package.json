{
  "name": "telegram-mini-app",
  "version": "1.0.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/SergeyStepanenko/flower-shop.git"
  },
  "keywords": [
    "flowers"
  ],
  "author": "Sergei Stepanenko",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SergeyStepanenko/flower-shop/issues"
  },
  "homepage": "https://github.com/SergeyStepanenko/flower-shop#readme",
  "description": "",
  "scripts": {
    "dev": "NODE_ENV=development webpack serve --config webpack.config.ts --mode development",
    "build": "npm run tsc && NODE_ENV=production webpack --config webpack.config.ts --mode production",
    "tsc": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,scss,md}\"",
    "lint": "eslint 'src/**/*.{ts,tsx,js,jsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx,js,jsx}' --fix",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "npm run tsc"
    ],
    "*.tsx": [
      "npm run lint",
      "npm run tsc"
    ]
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@babel/core": "7.22.17",
    "@babel/preset-env": "7.22.10",
    "@babel/preset-react": "7.22.5",
    "@babel/preset-typescript": "7.22.5",
    "@eslint/js": "9.12.0",
    "@pmmmwh/react-refresh-webpack-plugin": "0.5.10",
    "@types/node": "20.14.9",
    "@types/react": "18.3.11",
    "@types/react-dom": "18.2.7",
    "@types/webpack-env": "1.18.5",
    "@typescript-eslint/eslint-plugin": "8.8.1",
    "@typescript-eslint/parser": "8.8.1",
    "babel-loader": "9.1.3",
    "eslint": "9.12.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-react": "7.37.1",
    "html-webpack-plugin": "5.5.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.2.10",
    "react-refresh": "0.14.0",
    "ts-node": "10.9.1",
    "typescript": "5.2.2",
    "webpack": "5.88.2",
    "webpack-cli": "5.1.4",
    "webpack-dev-server": "4.15.1"
  }
}
