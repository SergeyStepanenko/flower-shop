{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true // Skips type checking for .d.ts files in node_modules
  },
  "include": ["src", "webpack.config.ts"],
  "exclude": ["node_modules"] // Exclude node_modules from being type-checked
}
